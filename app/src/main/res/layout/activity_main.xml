<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <fragment xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="60dp"
            android:id="@+id/layoutseach"
            >
            <EditText
                android:id="@+id/edSearch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ellipsize="end"
                android:hint="Search"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:imeOptions="actionSearch"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:background="@drawable/draw_search"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_cancel_black_24dp"
                android:id="@+id/cancel"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/layoutseach"
            android:layout_marginTop="380dp"
            android:background="@drawable/draw_search"
            android:visibility="invisible"
            android:id="@+id/layoutLoction"
            >

            <TextView
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Location"
                android:maxLines="2"
                android:textColor="#353333"
                android:id="@+id/tvLocation"
                />
        </RelativeLayout>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/layoutseach"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_my_location"
            android:id="@+id/myLocal"
            />

        <LinearLayout
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutseach"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@drawable/bg_top_radius_list_normal"
            >
            <ImageView
                android:paddingTop="2dp"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/statelli"
                android:id="@+id/changeMap1"
                android:scaleType="fitXY"
                />
            <ImageView
                android:paddingBottom="2dp"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/normal"
                android:layout_marginTop="5dp"
                android:layout_below="@id/changeMap1"
                android:id="@+id/changeMap2"
                />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>